{
  "name": "midnight-contract-template",
  "version": "1.0.0",
  "description": "Midnight Compact smart contract template",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "./scripts/build.sh",
    "build:dev": "./scripts/build.sh --skip-zk",
    "watch": "./scripts/watch.sh",
    "validate": "./scripts/validate.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "deploy:testnet": "ts-node scripts/deploy.ts --network testnet",
    "deploy:mainnet": "ts-node scripts/deploy.ts --network mainnet",
    "clean": "rm -rf build/ dist/ coverage/"
  },
  "dependencies": {
    "@midnight-ntwrk/midnight-js-contracts": "^1.0.0",
    "@midnight-ntwrk/midnight-js-provider": "^1.0.0",
    "@midnight-ntwrk/midnight-js-types": "^1.0.0"
  },
  "devDependencies": {
    "@midnight-ntwrk/compact-testing": "^1.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "dotenv": "^16.3.0",
    "eslint": "^8.50.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "build/*.ts"
  ],
  "keywords": [
    "midnight",
    "compact",
    "smart-contract",
    "zero-knowledge",
    "blockchain"
  ],
  "author": "",
  "license": "MIT"
}
